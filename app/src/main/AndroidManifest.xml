<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.app.zombiefight"
            android:versionCode="1"
            android:versionName="@string/app_version_name">

    <application
            android:allowBackup="true"
            android:icon="@drawable/zombie_icon"
            android:label= "@string/app_name"
            android:roundIcon="@drawable/zombie_icon"
            android:supportsRtl="true"
            android:theme="@style/Theme.ZombieFight">
        <activity android:name=".MainActivity" android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>