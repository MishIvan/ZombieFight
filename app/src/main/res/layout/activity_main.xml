<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:layout_margin="5dp">
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:rowCount="1" app:columnCount="2">

        <EditText
                android:text="ZombieBeaten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/idZCount"
                app:layout_column="0" app:layout_row="0"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Max Zombie Beaten"
                android:ems="10"
                android:id="@+id/idZCountMax" app:layout_column="1" app:layout_row="0"/>
    </androidx.gridlayout.widget.GridLayout>
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/idField" android:minHeight="400dp"
            android:layout_gravity="center_horizontal" android:layout_margin="3dp">

    </androidx.gridlayout.widget.GridLayout>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/idMessage" android:gravity="bottom"/>
</LinearLayout>