<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:layout_margin="5dp">
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rowCount="1"
            app:columnCount="2"
            android:textAlignment="viewStart" android:background="@color/black">

        <EditText
                android:text="Beaten: 0"
                android:layout_width="193dp"
                android:layout_height="wrap_content" android:id="@+id/idZCount"
                app:layout_column="0" app:layout_row="0" android:clickable="false" android:editable="false"
                android:layout_marginRight="5dp" android:textColor="@color/bloody" android:textStyle="bold"/>
        <EditText
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Max Beaten: 0"
                android:ems="10"
                android:id="@+id/idZCountMax" app:layout_column="1" app:layout_row="0" android:editable="false"
                android:clickable="false" android:layout_marginLeft="5dp" android:textColor="@color/bloody"
                android:textAlignment="textEnd" android:textStyle="bold"/>
    </androidx.gridlayout.widget.GridLayout>
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/idField" android:minHeight="400dp"
            android:layout_margin="3dp" android:layout_gravity="center_horizontal|fill_horizontal">

    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>