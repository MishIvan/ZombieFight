<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="200dp"
              android:layout_height="wrap_content" android:id="@+id/spin_layout" android:background="@color/black">
    <TextView
            android:text="@string/lang"
            android:layout_width="90dp"
            android:layout_height="match_parent" android:layout_weight="1"
            android:textColor="@color/bloody" android:textSize="18sp" android:layout_gravity="right"
            android:gravity="right"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/spin_arrow" android:id="@+id/image_arrow"
            android:layout_weight="1" android:layout_gravity="right" android:layout_marginStart="70dp"/>
</LinearLayout>